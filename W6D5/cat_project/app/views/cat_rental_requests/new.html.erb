<h1>Rental Request</h1>

<form action="<%= new_cat_rental_request_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  
  <label for="cat_id">Cat</label>
  <select name="cat_rental_request[cat_id]" id="cat_id">
    <option selected>--Pick a cat--</option>
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>" <%= @rental_request.id == cat.id ? "selected" : "" %>><%= cat.name %></option>
    <% end %>
  </select>

  <br>

  <label for="start_date">Start Date</label>
  <input type="date" name="rental_request[start_date]" id="start_date" value="<%= @rental_request.start_date %>">

  <br> 
  
  <label for="end_date">End Date</label>
  <input type="date" name="rental_request[end_date]" id="end_date" value="<%= @rental_request.end_date %>">

  <br>
  <input type="submit" value="Submit">
</form>
