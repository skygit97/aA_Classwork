<%= @cat.name %>

<table>
  <thead>
    <tr>
      <th>ATTRIBUTE</th>
      <th>VALUE</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>AGE</td>
      <td><%= @cat.age %></td>      
    </tr>
      <td>BIRTH_DATE</td>
      <td><%= @cat.birth_date %></td>
    <tr>
      <td>COLOR</td>
      <td><%= @cat.color %></td>
    </tr>
    <tr>
      <td>SEX</td>
      <td><%= @cat.sex %></td>
    </tr>
    
    <% if @cat.description %>
      <tr colspan="2">
        <td><%= @cat.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>